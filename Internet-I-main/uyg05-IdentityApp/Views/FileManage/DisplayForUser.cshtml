@{
    ViewData["Title"] = "DisplayForUser";
}

@model FileManageModel

<div class="container-fluid">
    <h1 class="text-center mb-5">Dosya Detayları</h1>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg rounded-3">
                <div class="card-body">
                    <table class="table table-borderless table-hover">
                        <tr>
                            <td><b>Dosya Adı</b></td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td><b>Dosya Açıklama</b></td>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <td><b>Dosya Önizleme</b></td>
                            <td>
                                @if (Model.Link.EndsWith(".mp4"))
                                {
                                    <video width="100%" controls>
                                        <source src="~/Files/@Model.Link" type="video/mp4">
                                        Tarayıcınız video etiketini desteklemiyor.
                                    </video>
                                }
                                else
                                {
                                    <img src="~/Files/@Model.Link" class="img-fluid rounded-3" alt="Dosya Önizleme" />
                                }
                            </td>
                        </tr>
                        <tr>
                            <td><b>Dosyayı İndir</b></td>
                            <td>
                                <a href="~/Files/@Model.Link" download="@Model.Name" class="btn btn-outline-primary btn-lg custom-btn">
                                    <i class="fas fa-download"></i> İndir
                                </a>
                            </td>
                        </tr>
                    </table>

                    <div class="text-center mt-4">
                        <a asp-action="IndexForUser" class="btn btn-outline-secondary btn-lg custom-btn">Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    body {
        background-color: #f8f9fa; /* Hafif gri arka plan */
    }

    .custom-btn {
        transition: all 0.3s ease;
        border-radius: 30px;
        text-transform: uppercase;
        font-weight: bold;
    }

        .custom-btn:hover {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }

    .card {
        border-radius: 20px;
        border: 1px solid #ddd;
        overflow: hidden;
    }

    .card-body {
        padding: 2rem;
    }

    .table td {
        vertical-align: middle;
        padding: 1rem;
    }

        .table td b {
            color: #343a40;
        }

    .table img, .table video {
        max-width: 100%;
        border-radius: 15px;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
    }
</style>
